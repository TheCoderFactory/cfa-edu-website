          a.nav-link.header-major-cta href="/fast-track/apply"  NOW ENROLLING
  .navbar.navbar-default.navbar-fixed-top.second-navbar
    a.hidden-md-up href="/"
      img.img-fluid src="#{asset_path 'cfa-header.svg'}" alt="CFA Logo"
    button.navbar-toggler.hidden-md-up.pull-right type="button" data-toggle="collapse" data-target="#globalNavbar" &#9776;
