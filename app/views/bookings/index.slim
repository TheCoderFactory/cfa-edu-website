.admin-courses-index
  .container
    .row
      .col-md-12
        = link_to "New Booking", admin_bookings_new_path, class: "main-cta-btn"
        center
          h1 BOOKINGS
          - if @bookings.size == 0
            h6 There are currently no bookings.
          - else
            table.highlight.bordered#booking-table
              thead
                tr
                  th width="20%" Course
                  th width="15%" Email
                  th width="10%" Attendees
                  th width="15%" Amount Paid
                  th width="10%" Paid?
                  th width="10%" Views
                  th width="10%"
                  th width="10%"
              tbody
                - @bookings.each do |booking|
                  tr
                    td #{booking.course_name}
                    td #{booking.email}
                    td #{booking.people_attending}
                    td #{booking.cost_in_dollars}
                    td #{booking.paid?}
                    td
                      = link_to booking_path(booking)
                        = fa_icon "eye", class: "fa-1x"
                        |  Show
                    td
                      = link_to edit_booking_path(booking)
                        = fa_icon "pencil", class: "fa-1x"
                        |  Edit
                    td
                      = link_to booking, data: { confirm: "Are you sure?" }, method: :delete
                        = fa_icon "trash", class: "fa-1x"
                        |  Delete

javascript:
  $(document).ready(function(){
    $('#booking-table').DataTable();
  });
